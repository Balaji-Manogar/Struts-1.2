<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.0//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>

	<form-beans>
		<form-bean name="registerForm" type="org.baali.struts.RegisterForm" />
		<form-bean name="logForm" type="org.baali.struts.logon.LogonForm" />
		<form-bean name="errorsForm" type="org.baali.struts.logon.ActionErrorsForm" />
	</form-beans>
	<global-forwards>
		<forward name="logoff" path="/logoff.do" />
		<forward name="logon" path="/logon.do" />
	</global-forwards>

	<action-mappings>
		<action path="/welcome" type="org.apache.struts.actions.ForwardAction"
			parameter="/logging/welcome.jsp" />
		<action path="/register" type="org.baali.struts.RegisterAction"
			name="registerForm" input="error.jsp">
			<forward name="success" path="/success.html" />
			<forward name="failure" path="/failure.html" />
		</action>
		<action path="/logoff" type="org.baali.struts.logon.LogoffAction"
			name="logForm" input="/logging/logon.jsp">
			<forward name="success" path="/logging/welcome.jsp" />
			<forward name="failure" path="/logging/logon.jsp" />
		</action>
		<action path="/logon" type="org.apache.struts.actions.ForwardAction"
			parameter="/logging/logon.jsp" />

		<action path="/logonSubmit" type="org.baali.struts.logon.LogonAction"
			name="logForm" input="/logging/logon.jsp" validate="true">
			<forward name="welcome" path="/logging/welcome.jsp" />
			<forward name="loginAgain" path="/logging/logon.jsp" />
		</action>
		<action path="/action-forward" type="org.baali.struts.logon.ActionForwardDemo"
			input="/index.jsp" name="actionForwardDemo">
			<forward name="forward" path="/forward" />
		</action>
		<action path="/action-error" type="org.baali.struts.logon.ActionErrorsDemo"
			name="errorsForm" validate="false" input="/forward/messages.jsp">

		</action>
		<action path="/action/message" type="org.baali.struts.logon.SimpleActionMessageDemo"
			validate="false" input="/index.jsp" />

		<!-- Struts Bridged Actions -->
		<action path="/action/forward-action" type="org.apache.struts.actions.ForwardAction"
			parameter="/forward/struts-forward.jsp" input="/index.jsp" />
		<action path="/action/include-page" type="org.apache.struts.actions.IncludeAction" parameter="/forward/action-include.jsp" />
		<action path="/action/include" type="org.apache.struts.actions.ForwardAction" parameter="/forward/includeActionDemo.jsp" />
		
		<!-- DispatchAction Demo  -->
		<action path="/action/dispatch" type="org.baali.struts.logon.DispatchActionDemo" parameter="method" />
		
		<!-- LookupDispatchAction Demo  -->
		<action path="/action/lookup" type="org.baali.struts.logon.LookupDispatchActionDemo" parameter="p" />
		
	</action-mappings>

	<message-resources parameter="resources.application" />
</struts-config>